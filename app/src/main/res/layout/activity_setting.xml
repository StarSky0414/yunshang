<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/set_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="100dp"
        android:src="@drawable/icon">
    </ImageView>

    <com.white.progressview.CircleProgressView
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/set_circle_progress_normal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="100dp"
        android:progress="0"
        android:background="@drawable/iconupdate"
        app:progressNormalSize="4dp"
        app:progressReachSize="4dp"
        app:progressStyle="Normal"
        app:radius="80dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/ll_WIFI_manager"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_WIFI_manager"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/wifi" />

            <TextView
                android:id="@+id/tv_WIFI_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_WIFI_manager"
                android:text="WIFI设定" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_goto" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_update_manager"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_update_manager"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/update" />

            <TextView
                android:id="@+id/tv_update_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_update_manager"
                android:text="更新" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_goto" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_out_manager"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20">

            <ImageView
                android:id="@+id/iv_out_manager"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/out" />

            <TextView
                android:id="@+id/tv_out_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_out_manager"
                android:text="退出" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_goto" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>