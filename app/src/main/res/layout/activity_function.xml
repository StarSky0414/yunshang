<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d7d7d7"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bt_portrait"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/shop" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/bt_portrait"
            android:text="星空"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:layout_toRightOf="@+id/tv_name" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rl_goods_info_main"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_goods_info_main"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/goods_info_main"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_goods_info_main"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="6dp"
                    android:text="商品管理"
                    android:textColor="#000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_goods_into_main"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:id="@+id/iv_goods_into_main"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/goods_into_main"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_goods_into_main"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="4dp"
                    android:text="进货管理"

                    android:textColor="#000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_balance_main"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView

                    android:background="@drawable/balance_main"
                    android:id="@+id/iv_balance_main"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_balance_main"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="6dp"
                    android:text="结算商品"
                    android:textColor="#1b1b1b" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/update_main"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:background="@drawable/updata_main"
                    android:id="@+id/iv_version"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

                <com.white.progressview.CircleProgressView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:id="@+id/circle_progress_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:progress="0"
                    app:progressNormalSize="4dp"
                    app:progressReachSize="4dp"
                    app:progressStyle="Normal"
                    app:radius="30dp"
                    />

                <TextView
                    android:id="@+id/tv_update_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_version"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:text="软件版本"
                    android:textColor="#000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_trends"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:background="@drawable/discount_main"
                    android:id="@+id/iv_development"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_development"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:focusable="false"
                    android:text="折扣设定"
                    android:textColor="#000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_about_me_main"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="#fff">

                <ImageView
                    android:background="@drawable/trend_main"
                    android:id="@+id/iv_about_me_main"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_about_me_main"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:text="销售统计"
                    android:textColor="#000000" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>