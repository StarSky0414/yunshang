<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sign_address"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="100dp"
        android:background="@color/swipeoption_blue"
        android:padding="50dp"
        android:src="@mipmap/address">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_address"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="点击签到"
        android:textColor="@color/White"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/sign_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_address"
        android:layout_centerHorizontal="true"
        android:text="暂无位置信息"
        android:textSize="20dp"></TextView>


    <RelativeLayout
        android:id="@+id/sign_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_address_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/sign_sun"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/sun"></ImageView>

        <TextView
            android:id="@+id/sign_sun_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_sun"
            android:layout_marginLeft="15dp"
            android:text="暂未签到"></TextView>

        <ImageView
            android:id="@+id/sign_mon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/mon"></ImageView>

        <TextView
            android:id="@+id/sign_mon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_mon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="暂未签到"></TextView>

    </RelativeLayout>


</RelativeLayout>